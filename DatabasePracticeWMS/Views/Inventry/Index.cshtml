@model IEnumerable<DatabasePracticeWMS.Models.GetItemDetails>

<h3>Inventry</h3>
<div class="row mt-4">
    <div class="col-sm-10">
        <div class="form-group col-md-2">
            <select id="itemSelect" name="selectedItemId" class="form-control" onchange="redirectToPage(this.value)">
                <option value="">--Inventory--</option>
                <option value="/Warehouse/Index">Warehouse</option>
                <option value="/Storage/StorageIndex">Storage</option>
                <option value="~/Item3">Item 3</option>
            </select>
        </div>
    </div>
    <div class="col-sm-2">
        <a class="btn btn-info  btn-sm text-light" href="~/Inventry/InsertItem">Add New +</a>
    </div>
</div>
<form>
<table class="table table-hover">
    <thead>
        <tr>
            <th></th>
            <th>Item</th>
           <th>SKU</th>
            <th>Seller</th>
            <th>Inventry</th>
            <th>Capacity</th>
            <th>Length</th>
            <th>Width</th>
            <th>Height</th>
            <th>Expirable</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Images/@item.ImageUrl" style="width:50px; height:auto;" />
                </td>
                    <td><a href="~/Inventry/ItemDetail/@item.RowGUID">@item.ItemNameEnglish</a></td>
                <td>@item.SKU</td>
                <td>@item.Name</td>
                <td>@item.Inventry</td>
                <td>@item.Capacity</td>
                <td>@item.Lenght</td>
                <td>@item.Width</td>
                <td>@item.Height</td>
                <td>@item.Expirable</td>
                <td>
                    <a asp-action="EditItem"  asp-route-id="@item.SKU">Edit</a> |
                    <a asp-action="ItemDelete"  asp-route-id="@item.SKU" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</form>

<script>
    function redirectToPage(value) {
        if (value) {
            // Redirect to the selected option's value
            window.location.href = value;
        }
    }
</script>

