@model IEnumerable<DatabasePracticeWMS.Models.GetItemDetails>

<h3>Inventry</h3>
<div class="row mt-4">
    <div class="col-sm-10">

    </div>
    <div class="col-sm-2">
        <a class="btn btn-info  btn-sm text-light" href="~/Inventry/InsertItem">Add New +</a>
    </div>
</div>
<form>
<table class="table table-hover">
    <thead>
        <tr>
            <th></th>
            <th>Item</th>
           <th>SKU</th>
            <th>Seller</th>
            <th>Inventry</th>
            <th>Capacity</th>
            <th>Length</th>
            <th>Width</th>
            <th>Height</th>
            <th>Expirable</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Images/@item.ImageUrl" style="width:50px; height:auto;" />
                </td>
                    <td><a href="~/Inventry/ItemDetail">@item.ItemNameEnglish</a></td>
                <td>@item.SKU</td>
                <td>@item.Name</td>
                <td>@item.Inventry</td>
                <td>@item.Capacity</td>
                <td>@item.Lenght</td>
                <td>@item.Width@item.UnitOfDimension</td>
                <td>@item.Height</td>
                <td>@item.Expirable</td>
                <td>
                    <a asp-action="EditItem"  asp-route-id="@item.SKU">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.SKU" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</form>

