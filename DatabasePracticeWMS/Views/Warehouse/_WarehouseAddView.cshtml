@model DatabasePracticeWMS.Models.Warehouse.AddWarehouse

<div class="container">
    <div class="modal fade" id="addWarehouseModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel">Add Warehouse</h5>
                </div>
                <div class="modal-body align-content-center">
                    <form id="myForm" method="post" action="AddWarehouse"  >
                        <div class="col-sm-10 align-content-center">
                            <div class="form-group col-md-8">
                                <label asp-for="Name">Warehouse Name</label>
                                <input asp-for="Name" class="form-control" required />
                            </div>
                            <div class="form-group mt-2 col-md-8">
                                <label asp-for="CityId">City Name</label>
                              @if (ViewBag.Merchant == null)
                                {
                                    <option value="">No Cities Available</option>
                                }
                                else
                                {
                                    <select asp-for="CityId" class="form-control" asp-items="@(new SelectList(ViewBag.Merchant, "Id", "CityName"))">
                                        <option value="">-- Select City --</option>
                                    </select>
                                } 
                                 
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" id="closeButton" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" id="submitBtn"   class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </div>
</div>
